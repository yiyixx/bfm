setLine($c = #afafaf) {
  position relative
  &:before {
    content: " ";
    position: absolute;
    left: 0;
    top: 0;
    width: 200%;
    height: 1px;
    border: 1px solid $c;
    color: $c;
    height: 200%;
    transform-origin: left top;
    transform: scale(0.5);
  }
}

setTopLine($c = #afafaf, $pos = before) {
  position: relative;
  &:{$pos} {
    content: " ";
    position: absolute;
    left: 0;
    top: 0;
    right: 0;
    height: 1px;
    border-top: 1px solid $c;
    color: $c;
    transform-origin: 0 0;
    transform: scaleY(0.5);
  }
}

setBottomLine($c = #afafaf, $pos = after) {
  position relative
  &:{$pos} {
    content: " ";
    position: absolute;
    left: 0;
    bottom: 0;
    right: 0;
    height: 1px;
    border-bottom: 1px solid $c;
    color: $c;
    transform-origin: 0 100%;
    transform: scaleY(0.5);
  }
}

setLeftLine($c = #afafaf, $pos = before) {
  position relative
  &:{$pos} {
    content: " ";
    position: absolute;
    left: 0;
    top: 0;
    width: 1px;
    bottom: 0;
    border-left: 1px solid $c;
    color: $c;
    transform-origin: 0 0;
    transform: scaleX(0.5);
  }
}

setRightLine($c = #afafaf, $pos = after) {
  position relative
  &:{$pos} {
    content: " ";
    position: absolute;
    right: 0;
    top: 0;
    width: 1px;
    bottom: 0;
    border-right: 1px solid $c;
    color: $c;
    transform-origin: 100% 0;
    transform: scaleX(0.5);
  }
}


